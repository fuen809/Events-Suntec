<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.fufu.eventssuntec.Navigation"
    android:id="@+id/nav">
    <ImageView
        android:layout_width="1000dp"
        android:layout_height="2000dp"
        android:scaleType="fitXY"
        android:id="@+id/suntecl1"
        android:src="@drawable/suntec_l1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="L1"
        android:id="@+id/oneButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="L2"
        android:id="@+id/twoButton"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/oneButton" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="L3"
        android:id="@+id/threeButton"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/twoButton" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="L4"
        android:id="@+id/fourButton"
        android:layout_alignBottom="@+id/threeButton"
        android:layout_toEndOf="@+id/threeButton" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="L6"
        android:id="@+id/fiveButton"
        android:layout_alignBottom="@+id/fourButton"
        android:layout_toEndOf="@+id/fourButton" />




</RelativeLayout>
